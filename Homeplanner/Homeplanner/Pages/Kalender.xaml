<Page x:Class="Homeplanner.Pages.Kalender"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="Kalender" Background="{DynamicResource BackgroundColor}">

    <Grid>
        <!-- Kalender-Überschrift -->
        <TextBlock Name="CurrentMonthText" Foreground="{DynamicResource ForegroundColor}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>

        <!-- Navigation für den Monat -->
        <Grid HorizontalAlignment="Center" Margin="0,10,0,269" Width="580">
            <!-- Linker Button zum vorherigen Monat -->
            <Button Content="◀" Click="PreviousMonth_Click" Width="40" Height="40" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFDDC4E5" BorderBrush="Black" FontSize="20" />

            <!-- Rechter Button zum nächsten Monat -->
            <Button Content="▶" Click="NextMonth_Click" Width="40" Height="40" Margin="0,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" Background="#FFDDC4E5" BorderBrush="Black" FontSize="20" />
        </Grid>

        <!-- Kalender Grid -->
        <Grid Name="CalendarGrid" Margin="20,120,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Wochentage -->
            <UniformGrid Columns="7" Background="{DynamicResource BackgroundColor}">
                <TextBlock Text="Mo" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}"/>
                <TextBlock Text="Di" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}"/>
                <TextBlock Text="Mi" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}"/>
                <TextBlock Text="Do" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}"/>
                <TextBlock Text="Fr" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}"/>
                <TextBlock Text="Sa" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}"/>
                <TextBlock Text="So" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{DynamicResource ForegroundColor}"/>
            </UniformGrid>

            <!-- Tage des Monats -->
            <UniformGrid Name="DaysContainer" Columns="7" Grid.Row="1"/>
        </Grid>

        <!-- Terminanzeige für den ausgewählten Tag -->
        <Border Name="EventPanel" Background="White" CornerRadius="10" Padding="20" Margin="10"
                VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="500" MinHeight="400" Visibility="Hidden" BorderBrush="#FFDDC4E5" BorderThickness="2">
            <StackPanel>
                <!-- Label für die Bezeichnung -->
                <TextBlock Text="Termin für den ausgewählten Tag" FontSize="18" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Label für das Datum -->
                <TextBlock Name="SelectedDateText" FontSize="16" FontStyle="Italic" HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <!-- Eingabe für Terminbezeichnung -->
                <TextBlock Text="Terminbezeichnung" FontSize="14" Foreground="#555" Margin="0,10"/>
                <TextBox Name="EventInput" Margin="0,10" Padding="10" Height="40" BorderBrush="#FFDDC4E5" BorderThickness="1" />

                <!-- Liste der gespeicherten Ereignisse -->
                <TextBlock Text="Gespeicherte Ereignisse" FontSize="14" Foreground="#555" Margin="0,10"/>
                <ListBox Name="EventsList" Height="150" Margin="0,10" BorderBrush="#FFDDC4E5" BorderThickness="1" />

                <!-- Schaltflächen zum Speichern und Schließen -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Speichern" Click="SaveEvent_Click" Width="100" Height="40" Background="#FF964FC8" Foreground="White" BorderBrush="#FF964FC8" Margin="10"/>
                    <Button Content="Schließen" Click="CloseEventPanel_Click" Width="100" Height="40" Background="#FFDDC4E5" BorderBrush="#FFDDC4E5" Margin="10"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
