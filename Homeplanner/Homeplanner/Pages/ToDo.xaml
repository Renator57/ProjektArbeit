<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Homeplanner.Pages.ToDo"
      Title="ToDo" Background="{DynamicResource BackgroundColor}">

    <Grid Height="367" Width="456">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*" />
            <ColumnDefinition/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2">
            <Grid Grid.Column="0">
                <Grid.RowDefinitions >
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Linke Spalte -->

                <DatePicker x:Name="DatumFeld" Margin="10" Grid.Row="0"/>

                <Label Content="ToDo hinzufügen" Margin="10,10,10,10" Grid.Row="1"/>

                <TextBox x:Name="InputTextBox" TextWrapping="Wrap"  Margin="10,35,14,1" Grid.Row="1" />

                <Button Content="Hinzufügen" Margin="10,100,10,10" Grid.Row="3" Click="Button_Click"/>
            </Grid>
        </StackPanel>

        <!-- Rechte Spalte -->
        <StackPanel Grid.Column="2">
            <ListBox x:Name="ToDoListbox"  Height="200"/>
            <Button Content="Löschen" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>




</Page>
