<Page x:Class="Homeplanner.Pages.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Profil" Background="{DynamicResource BackgroundColor}">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

        <!-- Hintergrundkarte -->
        <Border Padding="20" CornerRadius="10" Background="White" Width="350"
                BorderBrush="Gray" BorderThickness="1" >

            <StackPanel HorizontalAlignment="Center">

                <!-- Profilbild -->
                <Border Width="100" Height="100" CornerRadius="50" BorderBrush="LightGray"
                        BorderThickness="1" Margin="0,10,0,10" ClipToBounds="True">
                    <Image Name="imgProfile" Source="/Assets/Images/images.png" Stretch="Fill"/>
                </Border>

                <!-- Name & E-Mail -->
                <TextBlock Text="Max Mustermann" FontSize="20" FontWeight="Bold" 
                           Foreground="{DynamicResource ForegroundColor}" TextAlignment="Center"/>
                <TextBlock Text="max.mustermann@example.com" FontSize="14" 
                           Foreground="Gray" TextAlignment="Center" Margin="0,5,0,15"/>

                <!-- Profilinformationen -->
                <StackPanel Margin="10">
                    <TextBlock Text="📛 Name" FontSize="14" FontWeight="SemiBold"/>
                    <Border Background="#F5F5F5" Padding="5" CornerRadius="5">
                        <TextBlock Text="Max Mustermann" FontSize="14"/>
                    </Border>

                    <TextBlock Text="📧 E-Mail" FontSize="14" FontWeight="SemiBold" Margin="0,10,0,0"/>
                    <Border Background="#F5F5F5" Padding="5" CornerRadius="5">
                        <TextBlock Text="max.mustermann@example.com" FontSize="14"/>
                    </Border>

                    <TextBlock Text="🔒 Passwort" FontSize="14" FontWeight="SemiBold" Margin="0,10,0,0"/>
                    <Border Background="#F5F5F5" Padding="5" CornerRadius="5">
                        <TextBlock Text="********" FontSize="14"/>
                    </Border>
                </StackPanel>

                <!-- Bild ändern Button -->
                <Button Content="Bild ändern" Width="120" Height="30" Background="LightBlue"
                        Foreground="White" FontWeight="Bold" Margin="0,15,0,0"
                        Click="ChangeProfilePicture_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>
