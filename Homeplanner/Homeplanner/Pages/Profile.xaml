<Page x:Class="Homeplanner.Pages.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Profil" Background="{DynamicResource BackgroundColor}"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

        <!-- Hintergrundkarte mit Schatten und abgerundeten Ecken -->
        <Border Padding="30" CornerRadius="15" Background="White" Width="380"
                BorderBrush="LightGray" BorderThickness="1" Margin="10">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.1"/>
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center">

                <!-- Profilbild -->
                <Border Width="120" Height="120" CornerRadius="60" BorderBrush="LightGray"
                        BorderThickness="2" Margin="0,20,0,20" ClipToBounds="True">
                    <Image Name="imgProfile" Source="/Assets/Images/images.png" Stretch="Fill"/>
                </Border>

                <!-- Name & E-Mail -->
                <TextBlock Text="Max Mustermann" FontSize="24" FontWeight="Bold" 
                           Foreground="{DynamicResource ForegroundColor}" TextAlignment="Center"/>
                <TextBlock Text="max.mustermann@example.com" FontSize="16" 
                           Foreground="Gray" TextAlignment="Center" Margin="0,5,0,20"/>

                <!-- Profilinformationen -->
                <StackPanel Margin="15">
                    <!-- Name Information -->
                    <TextBlock Text="📛 Name" FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50"/>
                    <Border Background="#F4F4F4" Padding="10" CornerRadius="5">
                        <TextBlock Text="Max Mustermann" FontSize="16" Foreground="#34495E"/>
                    </Border>

                    <!-- E-Mail Information -->
                    <TextBlock Text="📧 E-Mail" FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,10,0,0"/>
                    <Border Background="#F4F4F4" Padding="10" CornerRadius="5">
                        <TextBlock Text="max.mustermann@example.com" FontSize="16" Foreground="#34495E"/>
                    </Border>

                    <!-- Passwort Information -->
                    <TextBlock Text="🔒 Passwort" FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,10,0,0"/>
                    <Border Background="#F4F4F4" Padding="10" CornerRadius="5">
                        <TextBlock Text="********" FontSize="16" Foreground="#34495E"/>
                    </Border>
                </StackPanel>

                <Button Content="Bild ändern" Width="140" Height="40" Background="#1ABC9C"
        Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,20,0,0"
        Cursor="Hand" BorderThickness="0" BorderBrush="Transparent"
        VerticalAlignment="Center" HorizontalAlignment="Center"
        Click="ChangeProfilePicture_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" Padding="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


            </StackPanel>
        </Border>
    </Grid>
</Page>
