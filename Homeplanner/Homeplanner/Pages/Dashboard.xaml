<Page x:Class="Homeplanner.Pages.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Dashboard" Background="{DynamicResource BackgroundColor}">
    
    <Page.Resources>
        <Style x:Key="AnimatedButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#FFDDC4E5"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Margin" Value="8"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="9,9,9,9">

                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"/>

                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#FF964FC8" Duration="0:0:0.3" />
                                            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#FF964FC8" Duration="0:0:0.3" />

                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#FFDDC4E5" Duration="0:0:0.3" />
                                            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#FFDDC4E5" Duration="0:0:0.3" />

                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Background="{DynamicResource BackgroundColor}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        

        <!-- Wetter-Widget -->
        <Border Name="WeatherBorder" Padding="20" Margin="10" CornerRadius="15" VerticalAlignment="Top" 
        Grid.Row="1" Grid.Column="1" Height="300" 
        Background="White" BorderBrush="White" BorderThickness="2">

            <StackPanel HorizontalAlignment="Center">
                <!-- Stadtname -->
                <TextBlock Text="{Binding City}" FontSize="20" FontWeight="Bold" Foreground="Black"
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>

                <!-- Wetter-Icon -->
                <Image Source="{Binding WeatherIcon}" Width="80" Height="80" Margin="0,10,0,10"/>

                <!-- Temperatur -->
                <TextBlock Text="{Binding Temperature}" FontSize="28" FontWeight="Bold" Foreground="Black"
                   HorizontalAlignment="Center"/>

                <!-- Wetterbeschreibung -->
                <TextBlock Text="{Binding WeatherDescription}" FontSize="16" FontStyle="Italic"
                   Foreground="Black" HorizontalAlignment="Center" Margin="0,5,0,0"/>

                <!-- Aktualisierungsbutton -->
                <Button Content="Aktualisieren" Click="GetWeather_Click" 
                 Style="{DynamicResource AnimatedButtonStyle}" FontFamily="Cascadia Code" Background="#FFDDC4E5" FontSize="16"/>
            </StackPanel>
        </Border>


        <!-- To-Do-Widget -->
        <Border Name="ToDoBorder" Padding="20" Margin="10,10,10,0" CornerRadius="15" VerticalAlignment="Top" 
                Grid.Row="1" Grid.Column="2" Height="378" BorderBrush="White" BorderThickness="0">
            <Border.Background>
                <SolidColorBrush Color="White"/>
            </Border.Background>
            
            <StackPanel>
                <TextBlock Text="To-Do für Heute" FontSize="24" Foreground="{DynamicResource ForegroundColor}" FontFamily="Cascadia Code SemiBold" FontWeight="Bold"/>
                <ListBox x:Name="ToDoListboxDashboard" Margin="10,10,0,0" Background="{DynamicResource MenuBackground}" BorderThickness="0
                         " Height="276" SelectionChanged="ListBox_SelectionChanged" >
                   
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Nachrichten-Widget -->
        <Border Name="NewsBorder" Background="White" Padding="20" Margin="10" CornerRadius="15" VerticalAlignment="Top" 
                Grid.Row="1" Grid.Column="0" Height="240" AllowDrop="True">
          
            <StackPanel>
                <TextBlock Text="Refridgerminder" FontSize="24" FontFamily="Cascadia Code SemiBold"/>
                <TextBlock Text="• Neue Version veröffentlicht!" FontSize="16" Margin="0,10"/>
                <TextBlock Text="• Serverwartung abgeschlossen." FontSize="16" Margin="0,10"/>
            </StackPanel>
        </Border>

    </Grid>
</Page>
