<Page x:Class="Homeplanner.Pages.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Dashboard" Background="{DynamicResource BackgroundColor}">

    <Page.Resources>
        <!-- Stil für animierte Buttons -->
        <Style x:Key="AnimatedButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#FFDDC4E5"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Margin" Value="8"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="9,9,9,9">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"/>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#FF964FC8" Duration="0:0:0.3" />
                                            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" To="#FF964FC8" Duration="0:0:0.3" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#FFDDC4E5" Duration="0:0:0.3" />
                                            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" To="#FFDDC4E5" Duration="0:0:0.3" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="{DynamicResource BackgroundColor}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- Wetter-Widget -->
        <Border Name="WeatherBorder" Padding="20" Margin="20,20,10,0" CornerRadius="15" VerticalAlignment="Top" Grid.Row="0" Grid.Column="1" Height="378"
                Background="gray" BorderBrush="{DynamicResource ForegroundColor}" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="{Binding City}" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource ForegroundColor}" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <Image Source="{Binding WeatherIcon}" Width="80" Height="80" Margin="0,10,0,10"/>
                <TextBlock Text="{Binding Temperature}" FontSize="28" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding WeatherDescription}" FontSize="16" FontStyle="Italic" Foreground="Black" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                <Button Content="Aktualisieren" Click="GetWeather_Click" Style="{DynamicResource AnimatedButtonStyle}" FontFamily="Cascadia Code" Background="#FFDDC4E5" FontSize="16" Height="37"/>
            </StackPanel>
        </Border>

        <!-- To-Do-Widget -->
        <Border Name="ToDoBorder" Padding="20" Margin="20,20,10,0" CornerRadius="15" VerticalAlignment="Top" Background="Gray"
                Grid.Row="0" Grid.Column="2" Height="378" BorderBrush="{DynamicResource ForegroundColor}" BorderThickness="2">
            <StackPanel>
                <TextBlock Text="To-Do's für Heute" FontSize="24" Foreground="{DynamicResource ForegroundColor}" FontFamily="Cascadia Code SemiBold" FontWeight="Bold"/>
                <ListBox x:Name="ToDoListboxDashboard" Margin="10,10,0,0" Background="{DynamicResource MenuBackground}" BorderThickness="0" Height="276" SelectionChanged="ListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="{Binding TaskText}" IsChecked="{Binding IsChecked}" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" HorizontalAlignment="Left" Foreground="{DynamicResource ForegroundColor}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Kalender-Widget -->
        <Border Name="CalendarBorder" Background="gray" Padding="20" Margin="20,20,10,0" CornerRadius="15" VerticalAlignment="Top" 
        Grid.Row="0" Grid.Column="0" Height="378" BorderBrush="{DynamicResource ForegroundColor}" BorderThickness="2" MouseLeftButtonUp="CalendarBorder_Click">
            <StackPanel>
                <!-- Titel des Kalenders -->
                <TextBlock Text="Kalender" 
               FontSize="24" 
               FontFamily="Cascadia Code SemiBold" 
               FontWeight="Bold" 
               Foreground="{DynamicResource ForegroundColor}" 
               HorizontalAlignment="Center"
               Margin="10, 0"/>

                <!-- Aktueller Tag Anzeige -->
                <Border Background="Transparent" 
            CornerRadius="10" 
            Padding="10" 
            Margin="0,15,0,10" 
            Height="291">


                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock x:Name="DayOfWeekTextBlock" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
                        <TextBlock x:Name="DateTextBlock" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

            </StackPanel>

        </Border>
    </Grid>
</Page>
