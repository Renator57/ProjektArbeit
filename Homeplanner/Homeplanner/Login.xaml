<Window x:Class="Homeplanner.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="500" Width="400" WindowStartupLocation="CenterScreen"
        Icon="Assets/Icons/icon.ico" KeyDown="Window_KeyDown"
        Background="#ECF0F1" AllowsTransparency="False">

    <Grid>
        <!-- Hintergrundrahmen mit Schatten -->
        <Border Background="#FFDDC4E5" CornerRadius="15" Padding="20" Width="350"
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10"/>
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center">

                <!-- Logo -->
                <Image HorizontalAlignment="Center" Height="120" Width="120"
                       Source="/Assets/Images/log1.png" Stretch="Uniform" Margin="0,0,0,10"/>

                <!-- Login Titel -->
                <TextBlock Text="Willkommen zurück!" FontSize="20" FontWeight="Bold"
                           Foreground="#2C3E50" TextAlignment="Center" Margin="0,0,0,20" FontFamily="Cascadia Code"/>

                <!-- Benutzername -->
                <TextBlock Text="Benutzername" FontSize="14" FontWeight="SemiBold" Foreground="#34495E" FontFamily="Cascadia Code"/>
                <Border Background="#ECF0F1" Padding="5" CornerRadius="8">
                    <TextBox Name="UsernameTextBox" Height="35" FontSize="14"
                             Background="Transparent" BorderThickness="0" KeyDown="LoginFields_KeyDown" VerticalAlignment="Center" Text="admin"/>
                </Border>

                <!-- Passwort -->
                <TextBlock Text="Passwort" FontSize="14" FontWeight="SemiBold" Foreground="#34495E" Margin="0,10,0,0" FontFamily="Cascadia Code"/>
                <Border Background="#ECF0F1" Padding="5" CornerRadius="8">
                    <PasswordBox Name="PasswordBox" Height="35" FontSize="14"
                                 Background="Transparent" BorderThickness="0" KeyDown="LoginFields_KeyDown" VerticalAlignment="Center" Password="1234"/>
                </Border>

                <!-- Login Button mit runden Ecken -->
                <Button Name="LoginButton" Content="Login" Height="40" Width="120"
                        Background="#FF964FC8" Foreground="White" FontSize="16"
                        FontWeight="Bold" Margin="0,20,0,0" Click="LoginButton_Click"
                        Cursor="Hand" BorderThickness="0" FontFamily="Cascadia Code">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Fehlernachricht -->
                <TextBlock Name="ErrorMessage" Foreground="Red" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
