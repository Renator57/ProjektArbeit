<Window x:Class="Homeplanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="600" Width="900"
        Background="{DynamicResource BackgroundColor}" 
        Foreground="{DynamicResource ForegroundColor}" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <Grid>
        <!-- Zeilen für Menü & Inhalt -->
        <Grid.RowDefinitions>
            <RowDefinition Height="57"/>
            <!-- Kopfbereich für Menü -->
            <RowDefinition Height="*"/>
            <!-- Hauptinhalt -->
        </Grid.RowDefinitions>

        <!-- Spalten für Menü & Inhalt -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="200"/>
            <!-- Dynamische Breite für Menü -->
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Header (Top-Bar) -->
        <Grid Grid.Row="0" Background="#FF6A00F1" Grid.ColumnSpan="2">
            <Label Content="Furkan Industries" HorizontalAlignment="Center" FontSize="28" FontFamily="Abel" 
                   VerticalAlignment="Center" Foreground="White"/>
        </Grid>

        <!-- Hamburger Menü Button -->
        <Button x:Name="HamburgerButton" FontSize="24" Padding="5"
        Background="Transparent" Click="ToggleMenu"
        HorizontalAlignment="Left" VerticalAlignment="Center"
        Width="60" Height="57" ToolTip="Menü">
    <Button.Content>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Rectangle Width="30" Height="3" Fill="{DynamicResource MenuBackground}" Margin="0,5"/>
            <Rectangle Width="30" Height="3" Fill="{DynamicResource BackgroundColor}" Margin="0,5"/>
            <Rectangle Width="30" Height="3" Fill="{DynamicResource BackgroundColor}" Margin="0,5"/>
        </StackPanel>
    </Button.Content>
</Button>


        <!-- Seitenmenü -->
        <Border x:Name="MenuPanel" Background="{DynamicResource MenuBackground}" Width="200"
                HorizontalAlignment="Left" Padding="10"
                Opacity="1" Visibility="Visible" Grid.Row="1" Margin="0,0,0,0">
            <StackPanel>
                <Button Content="Dashboard" Click="Navigate" Tag="/Pages/Dashboard.xaml" Style="{StaticResource MenuButtonStyle}" Background="#FF6A00F1" Foreground="White"/>
                <Button Content="ToDo" Click="Navigate" Tag="/Pages/ToDo.xaml" Style="{StaticResource MenuButtonStyle}" Background="#FF6A00F1" Foreground="White"/>
                <Button Content="Einstellungen" Click="Navigate" Tag="/Pages/Settings.xaml" Style="{StaticResource MenuButtonStyle}" Background="#FF6A00F1" Foreground="White"/>
                <Button Content="Profil" Click="Navigate" Tag="/Pages/Profile.xaml" Style="{StaticResource MenuButtonStyle}" Background="#FF6A00F1" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Hauptinhalt: Frame für Seiten -->
        <Frame x:Name="MainFrame" Grid.Column="1"
               NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>
